---
import {Icon} from 'astro-icon'
import {
  AnnouncementBar,
	Button,
	CustomerQuoteSection,
	ThreeColumnTextSection,
	YouTubeEmbedSection,
  StickyTextImageSection,
  CtaCardSection
} from '@littlesticks/odyssey-theme-components';
import Layout from '../../layouts/Page.astro';
import TextAndImageHero from '../../components/sections/heros/TextAndImageHero.astro';

const seo = {
	title: 'ICAMalaysia | 21 APSIC Basic Training Course in Infection Control',
	description: 'Infection Prevention - Planning for Tommorow 2023',
};
---

<Layout seo={seo} >
	<TextAndImageHero reversed>
		<div slot="text-container">
			<h1>Infection Prevention - Planning for Tommorow</h1>
			<p> </p>
		</div>
		<div slot="btns-container">
			<Button href="https://github.com/icamalaysia/webapp/raw/main/theme/assets/PampletAPSIC_2022_compressed%20(1).pdf" customIcon
				>Register Now <Fragment slot="icon">
          <Icon name="ic:baseline-chevron-right"/>
        </Fragment></Button
			>
		</div>
		<picture slot="image-container">
			<img
				src="https://raw.githubusercontent.com/icamalaysia/webapp/main/theme/assets/21APSIC_thumb.PNG"
				alt="21APSIC_thumb"
				id="home-hero-image"
			/>
		</picture>
	</TextAndImageHero>

<center><img
				src="https://i.ibb.co/MM7xhJm/IPPFT-1.png"
				alt="ippft_1"
				id="home-hero-image"
			/><br>

		<img
				src="https://i.ibb.co/MM7xhJm/IPPFT-2.png"
				alt="ippft_2"
				id="home-hero-image"
			/><br>

			</center>


  <CtaCardSection background="var(--theme-surface-2)" color="var(--theme-on-surface-2)">
    <h2>Register Today</h2>
    <p>It only takes a couple clicks to download and sign for your registration.</p>
    <Button href="#" customIcon>Register Now <Fragment slot="icon">
      <Icon name="ic:baseline-chevron-right"/>
    </Fragment></Button>
  </CtaCardSection>

</Layout>

